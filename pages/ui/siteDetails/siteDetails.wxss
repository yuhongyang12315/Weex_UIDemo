/* pages/ui/siteDetails/siteDetails.wxss */

.topTextTitle {
  height: 30rpx;
  width: calc(100vw - 60rpx);
  /* 水平居中（设置在子view） */
  margin: 0 auto;
  padding-top: 15rpx;
  font-size: 30rpx;
}

.detailsView {
  height: 550rpx;
  width: calc(100vw - 60rpx);
  /* 水平居中（设置在子view） */
  margin: 0 auto;
  background-color: bisque;
  margin-top: 30rpx;
  background: #fff;
  /* 上部圆角 */
  box-shadow: 0 4rpx 10rpx 0 rgba(0, 0, 0, 0.04);
  border-radius: 10rpx;
}

.topImageView {
  height: 270rpx;
  width: 100%;
  background-color: brown;
  border-radius: 10rpx 10rpx 0rpx 0rpx;
}

.addressText {
  /* 相对自己的位置 */
  position: relative;
  bottom: 80rpx;
  left: 20rpx;
  color: white;
  font-size: 35rpx;
  width: 400rpx;
  height: 50rpx;
  /* background-color: red; */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  /* 设置第几行，会发生缩略 */
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.siteInfomationView {
  /* 相对自己的位置 */
  position: relative;
  bottom: 30rpx;
  height: 220rpx;
  width: 100%;
  /* background-color: bisque; *//* 下部圆角 */
  border-radius: 0rpx 0rpx 10rpx 10rpx;
}

.loacaionView {
  margin-left: 20rpx;
  height: 100rpx;
  width: 95%;
  /* background-color: brown; */
  display: flex;
  flex-direction: row;
}

.loacaionImage {
  /* flex: 0.5; */
  padding-top: 5rpx;
  height: 36rpx;
  width: 28rpx;
  padding-right: 20rpx;
  /* background-color: black; */
}

.loacaionText {
  flex: 4.5;
  /* background-color: blueviolet; */
  font-size: 30rpx;
  height: 80rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  /* 设置第几行，会发生缩略 */
  -webkit-line-clamp: 2;
  overflow: hidden;
  /* 解决三星手机文字上下间距问题 */
  line-height: 40rpx;
}

.interval {
  margin-left: 15rpx;
  margin-top: 10rpx;
  /* flex: 0.018; */
  width: 1rpx;
  height: 75rpx;
  background-color: #e5e5e5;
  font-size: 60rpx;
  font-weight: 100;
  /* text-align: center;
  color: #E5E5E5; */
}

.loacaionRightView {
  flex: 1;
  /* background-color: black; */
}

.navImage {
  height: 60rpx;
  width: 60rpx;
  /* 相对自己的位置 */
  position: relative;
  left: 25rpx;
}

.diatanceText {
  height: 40rpx;
  width: 100%;
  font-size: 20rpx;
  text-align: center;
  /* background-color: black; *//* 相对自己的位置 */
  position: relative;
  bottom: 15rpx;
  /* 解决三星手机文字上下间距问题 */
  line-height: 40rpx;
}

.phoneView {
  margin-left: 20rpx;
  width: 95%;
  height: 60rpx;
  /* background-color: bisque; */
  display: flex;
  flex-direction: row;
  /*flex 上下居中 */
  align-items: center;
  /*flex 左右居中 */
  /* justify-content: center; */
}

.phoneImage {
  height: 36rpx;
  width: 28rpx;
}

.phoneNumber {
  width: 60%;
  font-size: 25rpx;
  margin-left: 20rpx;
}

.batteryDetails {
  margin-left: 20rpx;
  width: 95%;
  height: 60rpx;
  /* background-color: black; */
  display: flex;
  flex-direction: row;
  /*flex 上下居中 */
  align-items: center;
}
.batteryMiaoshu {
  width: 140rpx;
  height: 30rpx;
  font-size: 25rpx;
  margin-left: 20rpx;
}
/*底部使用提示*/
#text-useTip {
	width: 100vw;
	color: #F05B48;
	text-decoration: underline;
	text-align: center;
	position: absolute;
	bottom: 74rpx;
}