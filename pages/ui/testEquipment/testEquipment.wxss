/* pages/ui/chooseBattery/chooseBattery.wxss */

.viewController {
  margin-top: 15rpx;
  width: 100vw;
  height: 100vh;
  background-color: white;
}

.topView {
  width: 100vw;
  height: 100rpx;
  background-color: white;
  border-bottom: 1rpx solid #f5f5f7;
}

.topView_left {
  margin-left: 30rpx;
  width: 230rpx;
  height: 100rpx;
  line-height: 100rpx;
  float: left;
}

.topView_input {
  width: 400rpx;
  height: 100rpx;
  line-height: 100rpx;
  float: left;
  /* background: rebeccapurple; */
}

.last_rightView {
  color: #f05b48;
  height: 100rpx;
  width: 50rpx;
  float: right;
  margin-right: 30rpx;
}

.last_rightView_image_two {
  margin-left: 15rpx;
  margin-top: 35rpx;
  height: 30rpx;
  width: 30rpx;
}

.viewOne {
  height: 60rpx;
  line-height: 86rpx;
  width: 200rpx;
  margin-left: 30rpx;
}

.weui-grids {
  padding-top: 10rpx;
  height: calc(100vw * 0.4);
  width: calc(100vw - 60rpx);
  /* 水平居中（设置在子view） */
  margin: 0 auto;
  /* background-color: yellowgreen; */
}

.weui-gridsTwo {
  padding-top: 10rpx;
  height: calc(100vw * 0.2);
  width: calc(100vw - 60rpx);
  /* 水平居中（设置在子view） */
  margin: 0 auto;
  /* background-color: yellowgreen; */
}

.weui-grid {
  float: left;
  width: calc((100vw - 60rpx) * 0.2);
  height: calc((100vw - 60rpx) * 0.2);
  box-sizing: border-box;
  /* background-color: red; *//* border-bottom: 1px solid #d9d9d9; *//* border-right: 1px solid #d9d9d9; */
}

.batteryBox {
  height: 80%;
  width: 80%;
  background-color: rgba(255, 130, 0, 0.50);
  /* 水平居中（设置在子view） */
  margin: 0 auto;
  /* 垂直居中 (1-0.6)*0.1 */
  margin-top: calc((100vw - 60rpx) * 0.02);
  display: flex;
  flex-direction: column;
  /* 圆角 */
  border-radius: 10rpx 10rpx 10rpx 10rpx;
  /* 阴影 */
  box-shadow: 0 4px 10px 0 rgba(0, 0, 0, 0.10);
}

.batteryBox_select {
  background-color: #f05b48;
}

.numberTextView {
  /* 圆角 */
  border-radius: 10rpx 10rpx 0rpx 0rpx;
  flex: 3;
  text-align: center;
  vertical-align: bottom;
  font-size: 50rpx;
  /* background-color: rgba(255, 130, 0, 0.50); */
}

.stateTextView {
  /* 圆角 */
  border-radius: 0rpx 0rpx 10rpx 10rpx;
  /* background-color: rgba(255, 130, 0, 0.50); */
  flex: 2;
  text-align: center;
  font-size: 20rpx;
}

.bootmView {
  height: calc(100vh * 0.5);
  width: calc(100vw);
  background-color: bisque;
  /* 水平居中（设置在子view） */
  margin: 0 auto;
}

.list_table_view {
  height: 150rpx;
}

.list_row_cell {
  height: 150rpx;
  background-color: #f5f5f7;
}

.list_row_cell_view {
  height: 120rpx;
  width: calc(100vw - 90rpx);
  box-shadow: 0 4px 10px 0 rgba(0, 0, 0, 0.04);
  display: flex;
  flex-direction: row;
  /* flex垂直子元素居中 */
  align-items: center;
}

.time_leftView {
  padding-left: 30rpx;
  flex: 3;
  font-size: 30rpx;
  /* background-color: bisque; */
}

.time_RightView {
  flex: 1;
  font-size: 30rpx;
  /* height: 60rpx; *//* text-align: center; *//* background-color: bisque; */
}

.rightIcon {
  /* 圆角 */
  border-radius: 10rpx 10rpx 0rpx 0rpx;
  flex: 0.3;
  /* background-color: yellowgreen; */
}

.btnCellView {
  height: 100rpx;
  width: 100vw;
  /* background-color: bisque; */
}

.letf_btn {
  margin-top: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  width: 40vw;
  /* background-color: burlywood; */
  float: left;
  margin-left: 30rpx;
  border: 1rpx solid #f05b48;
  border-radius: 40rpx;
  color: #f05b48;
}

.right_btn {
  margin-top: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  width: 40vw;
  /* background-color: burlywood; */
  float: right;
  margin-right: 30rpx;
  border: 1rpx solid #f05b48;
  border-radius: 40rpx;
  color: #f05b48;
}

.hoverClass {
  color: #979797;
  border-color: #979797;
}

.btnCellView_BoxView {
  height: 150rpx;
  width: 100vw;
  /* background-color: bisque; */
}

.btnCellView_Box {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  width: 100rpx;
  /* background-color: rgba(255, 130, 0, 0.50); *//* 圆角 */
  border-radius: 10rpx 10rpx 10rpx 10rpx;
  /* 阴影 */
  box-shadow: 0 4px 10px 0 rgba(0, 0, 0, 0.10);
  float: left;
  margin-left: 40rpx;
  color: #999;
  margin-top: 30rpx;
}
