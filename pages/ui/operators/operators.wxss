/* pages/operators/operators.wxss */
.pageVIew{
	width: 100vw;
	height: auto;
	min-height: 100vh;
	background: #f5f5f5;
	border-top: solid 1rpx #E5E5E5;
	font-size: 30rpx;
}

/*头部的搜索和城市赛选view*/
.headView{
	width: 100vw;
	height: 100rpx;
	background: white;
	border-top: solid 1rpx #E7E7E7;
	border-bottom: solid 1rpx #E5E5E5;
	display: flex;
	flex-direction: row;
	align-items: center;
}

/***********活动该列表***********/
.activityListView{
	width: 100vw;
	height: calc(100vh - 105rpx);
}


/*城市筛选view*/
.cityView{
	margin-left: 30rpx;
	color: #333333;
	font-size: 34rpx;
	display: flex;
	flex-direction: row;
	align-items: center;
}
.cityIcon{
	margin-left: 16rpx;
	width: 30rpx;
	height: 30rpx;
}


/*下三角形*/
.triangle-down {
    margin-left: 16rpx;
    border-top: 16rpx solid black;
    border-left: 8rpx solid transparent;
    border-right: 8rpx solid transparent;

}

/*上三角形*/
.triangle-up {
    margin-left: 16rpx;
    border-left: 8rpx solid transparent;
    border-right: 8rpx solid transparent;
    border-bottom: 16rpx solid black;
}


/*筛选结果view*/
.selectedView{
	width: auto;
	height: 100rpx;
	font-size: 30rpx;
	margin-left: 30rpx;
	display: flex;
	flex-direction: row;
	align-items: center;
	position: absolute;
	right: 30rpx;
}


/*悬浮球*/
.floatBtn{
	width: 120rpx;
	height: 120rpx;
	position: absolute;
	top: 80vh;
	right: 30rpx;
}





/**************筛选状态弹窗***********/
.selectDialogPage{
	position: absolute;
	top: 100rpx;
	left: 0;
	width: 100vw;
	height: 100vh;
	z-index: 99999;
	background: rgba(0, 0, 0, 0.3);
	border-top: solid 1rpx #E5E5E5;
}

/*状态选择listview*/
.selectListView{
	width: 100vw;
	height: auto;
	color: #666666;
	background: white;
}
/*状态选择item*/
.selectListItem{
	width: calc(100vw - 30rpx);
	height: 88rpx;
	margin-left: 30rpx;
	border-bottom: solid 1rpx #E5E5E5;
	font-size: 28rpx;
	display: flex;
	flex-direction: row;
	align-items: center;
}

.selectListItem_image{
	width: 50rpx;
	height: 50rpx;
	position: relative;
	left: calc(100vw - 30rpx - 200rpx - 50rpx - 30rpx);
}

/****************城市弹窗*************/
.cityDialogView{
	width: 100vw;
	height: auto;
	background: white;
}

/*城市选择的view*/
.cityDialogView_selectCityView{
	width: 100vw;
	min-height: 60rpx;
	height: auto;
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
}

/*城市item*/
.cityItem{
	width: calc(100vw /4);
	height: 60rpx;
	color: #666666;
	font-size: 28rpx;
	/* border: solid 1rpx #00C87D; */
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}

.cityDialogView_moreTip{
	height: 80rpx;
	font-size: 28rpx;
	color: #999999;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}