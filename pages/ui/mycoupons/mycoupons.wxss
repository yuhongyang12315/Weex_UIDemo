/* pages/ui/mycoupons/mycoupons.wxss */
/*提示*/
#head-view {
    width: calc(100vw - 30rpx);
    height: 60rpx;
    margin-right: 30rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-end;
	float: left;
}

/*提示文字*/
#head-view-text-tip {
    text-decoration: underline;
}

/*提示图片*/
#img-warning {
    width: 32rpx;
    height: 32rpx;
    margin-right: 15rpx;
}

/*滚动列表*/
#scrool-view {
	margin-top: 0rpx;
}

/*列表item*/
#view-item {
	width: calc(100vw - 60rpx);
    height: 210rpx;
	margin-left: 30rpx;
	margin-right: 30rpx;
    background: white;
	box-shadow: 0 4px 9px 0 rgba(0,0,0,0.1);
	border-radius: 10px;
    margin-bottom: 30rpx;
	display: flex;
	flex-direction: row;
}

/*item -hover-view*/
#hover-view {
	width: calc(100vw - 60rpx);
	height: 210rpx;
	border-radius: 10px;
    margin-bottom: 30rpx;
	display: flex;
	flex-direction: row;
}

/*item中间的view*/
#item-view-center {
	width: calc(100% - 29rpx);
	height: 210rpx;
	display: flex;
	flex-direction: column;
}

/*item中间的view 上边的view*/
#item-view-center-top {
	height: 152rpx;
	display: flex;
	flex-direction: row;
}

/*item中间的view 上边的左边的view*/
#item-view-center-top-left {
	width: calc(100vw - 300rpx);
	padding-left: 30rpx;
	display: flex;
	flex-direction: column;
}

/*优惠券名称*/
#item-name {
	height: 42rpx;
	margin-top: 48rpx;
	font-weight: bold;
	font-size: 32rpx;
	color: #F05B48;
}

/*优惠券到期时间*/
#item-time {
	height: 42rpx;
}

/*优惠券金额*/
#item-money-view {
	width: 150rpx;
	height: 80rpx;
	margin-top: 48rpx;
	color: #F05B48;
	position: relative;
	right: 0rpx;
	display: flex;
	justify-content: flex-end;
	align-items: center;
}

/*优惠券金额符号*/
#item-money-f {
	font-size: 30rpx;
}

/*优惠券金额数值*/
#item-money-text {
	font-size: 72rpx;
}

/*优惠券限制文字*/
#item-confine {
	font-size: 26rpx;
}

/*中间item下边的view*/
#item-view-center-bottom {
	height: 58rpx;
	margin-left: 30rpx;
	margin-right: 30rpx;
	border-top: solid 1rpx #E5E5E5;
	display: flex;
	align-items: center;
}


/*左边缺角*/
#angle-round-left {
	width: 15rpx;
	height: 30rpx;
	background: #f5f5f7;
	border-radius: 0 15rpx 15rpx 0;
	position: relative;
	margin-top: 90rpx;
	box-shadow: inset -12rpx -3rpx 5px 0 rgba( 0, 0, 0, 0.08);
}

/*右边缺角*/
#angle-round-right {
	width: 15rpx;
	height: 30rpx;
	background: #f5f5f7;
	border-radius: 15rpx 0 0 15rpx;
	position: relative;
	margin-right: -15rpx;
	margin-top: 90rpx;
	box-shadow: inset 12rpx -3rpx 5px 0 rgba( 0, 0, 0, 0.08);
}

