  -webkit-box-orient: vertical;
  /* 设置第几行，会发生缩略 */
  -webkit-line-clamp: 1;
  overflow: hidden;
  /* 解决三星手机文字上下间距问题 */
  line-height: 40rpx;
}

.cell_rightView {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-end;
  /* background-color: blueviolet; */
}

.cell_rightViewOne {
  height: 30rpx;
  width: 200rpx;
  font-size: 30rpx;
  text-align: right;
  padding-bottom: 15rpx;
  /* background-color: burlywood; */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  /* 设置第几行，会发生缩略 */
  -webkit-line-clamp: 1;
  overflow: hidden;
  /* 解决三星手机文字上下间距问题 */
  line-height: 40rpx;
}

.cell_rightViewTwo {
  height: 30rpx;
  width: 200rpx;
  font-size: 25rpx;
  text-align: right;
  padding-top: 15rpx;
  /* background-color: white; */
  display: -webkit-box;
